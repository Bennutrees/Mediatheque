{% extends 'base.html.twig' %}

{% block title %}Liste des Livres Audio{% endblock %}

{% block body %}
    <h1 class="my-4">Liste des Livres Audio</h1>

    <table class="table text-center">
        <thead>
            <tr>
                {% include "layout/globalProductTh.html.twig" %}
                <th>Auteur</th>
                <th>Durée</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody class="text-center">
        {% for product in audio_books %}
            <tr>
                {{ include ("layout/globalProduct.html.twig",{'product': product } ) }}
                <td>{% for product in product.isInvolvedIns %}
                        {{ product.creator}}
                    {% endfor %}
                </td>

                <td>{{ product.duration ? product.duration|date('H:i:s') : '' }}
                </td>
                <td>
                    <a href="{{ path('audio_book_show', {'id': product.id}) }}" type="btn" class="btn btn-info">Voir</a>
                    <a href="{{ path('audio_book_edit', {'id': product.id}) }}" type="btn" class="btn btn-success">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune entitée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('audio_book_new') }}" type="btn" class="btn btn-outline-secondary my-3">Ajouter nouveau</a>
{% endblock %}





