{% extends 'base.html.twig' %}

{% block title %}Liste des Evénements{% endblock %}

{% block body %}
    <h1 class="my-4">Liste des Evénements</h1>

    <table class="table text-center">
        <thead>
            <tr>
                <th>Organisateur</th>
                <th>Nom</th>
                <th>Artistes</th>
                <th>Date</th>
                <th>Places</th>
                <th>Places Disponibles</th>
            </tr>
        </thead>
        <tbody>
        {% for meet_up in meet_ups %}
            <tr>
                <td>{{ meet_up.organizer }}</td>
                <td>{{ meet_up.title }}</td>
                <td>
                    {% for creator in meet_up.guests %}
                        <p>{{ creator.firstName ~ ' ' ~ creator.lastName }}</p>
                    {% endfor %}
                </td>
                <td>{{ meet_up.date ? meet_up.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ meet_up.maxPlaces }}</td>
                <td>{{ meet_up.maxPlaces - meet_up.bookedPlaces }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune entitée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
