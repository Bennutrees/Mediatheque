{% extends 'base.html.twig' %}

{% block title %}Liste des Maintenances{% endblock %}

{% block body %}
    <h1 class="my-4">Liste des Maintenances</h1 class="my-4">

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th>MaintenanceDate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for maintenance in maintenances %}
            <tr>
                <td>{{ maintenance.id }}</td>
                <td>{{ maintenance.status }}</td>
                <td>{{ maintenance.maintenanceDate ? maintenance.maintenanceDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('maintenance_show', {'id': maintenance.id}) }}">Voir</a>
                    <a href="{{ path('maintenance_edit', {'id': maintenance.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune entit√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('maintenance_new') }}" type="btn" class="btn btn-outline-secondary my-3">Ajouter nouveau</a>
{% endblock %}
