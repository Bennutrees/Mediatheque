{% extends 'base.html.twig' %}

{% block title %}Liste des Employés{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/crud_index.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <h1 class="my-4">Liste des Employés</h1>

    <a href="{{ path('employee_new') }}" type="btn" class="btn btn-outline-secondary my-3">Ajouter nouveau</a>

    <table class="table text-center">
        <thead>
            <tr>
                {% include "form/globalUserTh.html.twig" %}
                <th>Evénements Organisés</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for employee in employees %}
            <tr>
                {% include "form/globalUser.html.twig" with {'user' : employee} %}
                <td>
                    {% for meet_up in employee.meetUpsOrganized %}
                        <p>{{ meet_up.title }}</p>
                    {% endfor %}
                </td>
                {% include "admin/layout/crudActions.html.twig" with {'crudName': 'employee', 'crudElement': employee} %}
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune entitée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
