{% extends 'base.html.twig' %}

{% block title %}Liste des Borrowing{% endblock %}

{% block body %}
    <h1 class="my-4">Liste des Borrowing </h1 class="my-4">

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>StartDate</th>
                <th>ExpectedReturnDate</th>
                <th>EffectiveReturnDate</th>
                <th>Titre du produit</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for borrowing in borrowings %}
            <tr>
                <td>{{ borrowing.id }}</td>
                <td>{{ borrowing.startDate ? borrowing.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ borrowing.expectedReturnDate ? borrowing.expectedReturnDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ borrowing.effectiveReturnDate ? borrowing.effectiveReturnDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ borrowing.document }}</td>
                <td>
                    <a href="{{ path('borrowing_show', {'id': borrowing.id}) }}">Voir</a>
                    <a href="{{ path('borrowing_edit', {'id': borrowing.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune entit√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('borrowing_new') }}" type="btn" class="btn btn-outline-secondary my-3">Ajouter nouveau</a>
{% endblock %}


