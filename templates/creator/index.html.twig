{% extends 'base.html.twig' %}

{% block title %}Creator index{% endblock %}

{% block body %}
    <h1>Creator index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prénom</th>
                <th>Nom de famille</th>
                <th>Role</th>
                <th>Date de naissance</th>
                <th>Date de décès</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for creator in creators %}
            <tr>
                <td>{{ creator.id }}</td>
                <td>{{ creator.firstName }}</td>
                <td>{{ creator.lastName }}</td>
                <td>{% for creator in creator.isInvolvedIns %}
                        {{ creator.role }}
                {% endfor %}</td>
                <td>{{ creator.birthDate ? creator.birthDate|date('Y-m-d') : '' }}</td>
                <td>{{ creator.deathDate ? creator.deathDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('creator_show', {'id': creator.id}) }}" type="btn" class="btn btn-info">Voir</a>
                    <a href="{{ path('creator_edit', {'id': creator.id}) }}" type="btn" class="btn btn-success">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('creator_new') }}">Create new</a>
{% endblock %}
