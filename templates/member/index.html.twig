{% extends 'base.html.twig' %}

{% block title %}Liste des Adhésions{% endblock %}

{% block body %}
    <h1 class="my-4">Liste des Adhésions</h1>

    <table class="table text-center">
        <thead>
        <tr>
            <th>Id</th>
            {% include "layout/globalUserTh.html.twig" %}
            <th>Date d'adhésion</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in members %}
            <tr>
                <td>{{ user.id }}</td>

                {{ include ("layout/globalUser.html.twig",{'user': user } ) }}

                <td>{{ user.membershipDate ? user.membershipDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('member_show', {'id': user.id }) }}" type="btn" class="btn btn-info">Voir</a>
                    <a href="{{ path('member_edit', {'id': user.id}) }}" type="btn" class="btn btn-success">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>

                <td colspan="3">Aucune entitée</td>

            </tr>
        {% endfor %}
        </tbody>
    </table>


    <a href="{{ path('member_new') }}" type="btn" class="btn btn-outline-secondary my-3">Ajouter nouveau</a>

{% endblock %}
