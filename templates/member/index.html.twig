{% extends 'base.html.twig' %}

{% block title %}Liste des Adhésions{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/crud_index.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <h1 class="my-4">Liste des Adhésions</h1>
    
    <a href="{{ path('member_new') }}" type="btn" class="btn btn-outline-secondary my-3">Ajouter nouveau</a>

    <table class="table text-center">
        <thead>
        <tr>
            {% include "layout/globalUserTh.html.twig" %}
            <th>Date Adhésion</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in members %}
            <tr>
                {% include "layout/globalUser.html.twig" with {'user' : user} %}
                <td>{{ user.membershipDate ? user.membershipDate|date('Y-m-d H:i:s') : '' }}</td>
                {% include "layout/crudActions.html.twig" with {'crudName': 'member', 'crudElement': user} %}
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucune entitée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}