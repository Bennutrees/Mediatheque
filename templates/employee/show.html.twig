{% extends 'base.html.twig' %}

{% block title %}Employé{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/show_entity.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <h1 class="my-4">Employé</h1>

    <table class="table text-center">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ employee.id }}</td>
            </tr>
        </tbody>
    </table>

    <div class="actions my-3">
        <a href="{{ path('employee_edit', {'id': employee.id}) }}" type="btn" class="btn btn-success">Editer</a>
        {{ include('employee/_delete_form.html.twig') }}
        <a href="{{ path('employee_index') }}" type="btn" class="btn btn-outline-secondary">Retour à la Liste</a>
    </div>
{% endblock %}
