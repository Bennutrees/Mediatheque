{% extends 'base.html.twig' %}

{% block title %}Liste des Employés{% endblock %}

{% block body %}
    <h1 class="my-4">Liste des Employés</h1>

    <table class="table text-center">
        <thead>
            <tr>
                <th>Id</th>
                {% include "layout/globalUserTh.html.twig" %}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in employees %}
            <tr>
                <td>{{ user.id }}</td>
                {% include "layout/globalUser.html.twig" %}
                <td>
                    <a href="{{ path('employee_show', {'id': user.id}) }}" type="btn" class="btn btn-info">Voir</a>
                    <a href="{{ path('employee_edit', {'id': user.id}) }}" type="btn" class="btn bg-success">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Aucune entitée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('employee_new') }}" type="btn" class="btn btn-outline-secondary my-3">Ajouter nouveau</a>
{% endblock %}
