{% extends 'base.html.twig' %}

{% block title %}Employee index{% endblock %}

{% block body %}
    <h1>Employee index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                {% include "layout/globalUserTh.html.twig" %}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in employees %}
            <tr>
                <td>{{ user.id }}</td>
                {% include "layout/globalUser.html.twig" %}
                <td>
                    <a href="{{ path('employee_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('employee_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('employee_new') }}">Create new</a>
{% endblock %}
